{
    "rewrites": [
      { "source": "/", "destination": "/index.html" },
      { "source": "/methomath", "destination": "/methomath.html" },
      { "source": "/api/(.*)", "destination": "/api/$1.js" }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400"
          }
        ]
      }
    ],
    "functions": {
      "api/**/*.js": {
        "memory": 1024,
        "maxDuration": 80
      }
    }
  }